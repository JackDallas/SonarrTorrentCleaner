[Unit]
Description=SonarrTorrentCleaner Daemon
After=network.target
[Service]
User=$USER
Group=$USER
UMask=0002
Type=simple
ExecStart=/opt/SonarrTorrentCleaner/SonarrTorrentCleaner
WorkingDirectory=/opt/SonarrTorrentCleaner/
TimeoutStopSec=20
KillMode=process
Restart=on-failure
[Install]
WantedBy=multi-user.target